<%= form_with model: @user, local: true do |f| %>
  <div class="space-y-6">
    <%= render "shared/errors", obj: @user %>

    <div>
      <%= f.label :username, class: "block text-sm font-medium text-slate-700" %>
      <%= f.text_field :username, class: "mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 text-black" %>
      <% if @user.errors[:username].any? %>
        <p class="text-sm text-red-600 mt-1"><%= @user.errors[:username].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-slate-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 text-black" %>
      <% if @user.errors[:email].any? %>
        <p class="text-sm text-red-600 mt-1"><%= @user.errors[:email].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-slate-700" %>
      <%= f.password_field :password, class: "mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 text-black" %>
      <% if @user.errors[:password].any? %>
        <p class="text-sm text-red-600 mt-1"><%= @user.errors[:password].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-700" %>
      <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 text-black" %>
      <% if @user.errors[:password_confirmation].any? %>
        <p class="text-sm text-red-600 mt-1"><%= @user.errors[:password_confirmation].first %></p>
      <% end %>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit(@user.persisted? ? "Update User" : "Sign Up", class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-400") %>
      <%= link_to 'Cancel', root_path, class: "text-sm text-slate-500 hover:underline" %>
    </div>
  </div>
<% end %>